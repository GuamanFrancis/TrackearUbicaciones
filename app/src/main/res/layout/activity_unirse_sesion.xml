<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#121212">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#1E88E5"
        app:title="Unirse a Sesión"
        app:titleTextColor="#FFFFFF"
        android:elevation="4dp" />

    <!-- Campo de búsqueda -->
    <EditText
        android:id="@+id/edtBuscarSesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:hint="Buscar sesión por nombre"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:backgroundTint="#B0BEC5" />

    <!-- RecyclerView para listar sesiones -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewSesiones"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <!-- Campo para ingresar código -->
    <EditText
        android:id="@+id/edtCodigo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:hint="Ingresar código de sesión"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:backgroundTint="#B0BEC5" />

    <!-- Botón para unirse -->
    <Button
        android:id="@+id/btnUnirse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Unirse a Sesión"
        android:backgroundTint="#1E88E5"
        android:textColor="#FFFFFF" />

</LinearLayout>